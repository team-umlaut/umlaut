<%
unless @user_request.nil?
cite = @user_request.referent.to_citation %>

<div class="inner_modal_dialog">
<%= form_tag({:controller => "export_email", :action => "send_email", :id => params[:id]}, :class => "modal_dialog_form" ) do  %>
  <h2>Email the title and locations</h2>
  
  <div class="formError">
    <%= validation_error( @error || flash[:alert]) if ( @error || flash[:alert]) %>
  </div>
  
  <h3><strong>Title:</strong> <%= h(cite[:title]) %>/<%= h(cite[:author]) %></h3>
  <div>
    <%= label_tag 'email', 'Enter your email address:' %>
    <%= text_field_tag 'email', params[:email] %>
  </div>
  <div class="section">
    <%= submit_tag 'Send!' %>    
  </div>
<%
end 
end
%>
</div>
